<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classes_entry"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/letter_grade"
        android:inputType="textCapCharacters"
        android:maxLength="1"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="Class Letter Grade"
        android:imeOptions="actionNext"
        android:nextFocusRight="@+id/credit_hours"
        android:textSize="17sp"/>
    <EditText
        android:id="@+id/credit_hours"
        android:inputType="number"
        android:maxLength="1"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="Hours/Credits"
        android:imeOptions="actionNext"
        android:nextFocusDown="@+id/letter_grade"
        android:textSize="17sp"/>

</LinearLayout>